<div class="container mt-5">
  <h1 class='col-6'><%= @task.completed ? "✅" : "❌" %> <%= @task.title %></h1>
  <p class='mb-5'><%= @task.details %></p>
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-dark' %>
  <%= link_to 'Delete',
      task_path(@task),
      data: {turbo_method: :delete,
      turbo_confirm: "Are you sure you want to delete '#{@task.title}'?"},
      class: 'btn btn-danger' %>
</div>
